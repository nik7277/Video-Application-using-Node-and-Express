<div id = "gameContainer">
    <main role="main">
      <div class="carousel slide" id="myCarousel" data-ride="carousel">
        <ol class="carousel-indicators">
          <li class="active" data-target="#myCarousel" data-slide-to="0"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active"><img class="first-slide" src="/images/Table_Tennis_home.jpeg" alt="Table Tennis" />
            <div class="container">
              <div class="carousel-caption text-left">
                <h1>Table Tennis</h1>
              </div>
            </div>
          </div>
          <div class="carousel-item"><img class="second-slide" src="/images/Pool.jpg" alt="Second slide" />
            <div class="container">
              <div class="carousel-caption">
                <h1>Pool</h1>
              </div>
            </div>
          </div>
          <div class="carousel-item"><img class="third-slide" src="/images/squash.jpg" alt="Third slide" />
            <div class="container">
              <div class="carousel-caption text-right">
                <h1>Squash</h1>
              </div>
            </div>
          </div>
        </div><a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev"><span class="carousel-control-prev-icon" aria-hidden="true"></span><span class="sr-only">Previous</span></a><a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next"><span class="carousel-control-next-icon" aria-hidden="true"></span><span class="sr-only">Next</span></a>
      </div>


        
        <div class="container marketing">
          
          <div class="row">
            <div class="col-lg-4"><img class="rounded-circle" src="images/Bowling.jpg" alt="Generic placeholder image" width="140" height="140" />
              <h2>Adult Games</h2>
              <p></p>
              <p><button class="btn btn-primary index-filtering" >Adults</button></p>
            </div>
            
            <div class="col-lg-4"><img class="rounded-circle" src="images/Carrom Board.jpg" alt="Generic placeholder image" width="140" height="140" />
              <h2>Board Games</h2>
              <p></p>
              <button class="btn btn-primary index-filtering Board-Games">Board Games</button>
            </div>
            
            <div class="col-lg-4"><img class="rounded-circle" src="images/kid games.jpg" width="140" height="140" />
              <h2>Kids Games</h2>
              <p></p>
              <p><a class="btn btn-primary index-filtering Kids" href="#" role="button">Kids</a></p>
            </div>
            
            
            <footer class="container">
              <p class="float-right"><a href="#">Back to top</a></p>
              <p>© Indoor Playground, Inc. · <a href="#">Privacy</a> · <a href="#">Terms</a></p>
            </footer>
          </div>
        </div>
      </main>
    </div>
